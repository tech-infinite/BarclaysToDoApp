@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">List of Tasks</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Priority</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
             @foreach (var item in Model.ListOfTasks)
            {
                <tr>
                    <td>@item.TaskName</td>
                    <td>@item.Priority</td>
                    <td>@item.Status</td>
                    <td>
                        <a asp-page="Edit" asp-route-id="@item.TaskId">Edit</a> |
                        <a asp-page-handler="Delete" asp-route-id="@item.TaskId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
        <p>
            <a asp-page="Create">Create New Task</a>
        </p>
 </div>
