@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<h1 class="display-4">List of Tasks</h1>
    
 <a asp-page="CreateTask" class="btn btn-primary mb-3">Add new task</a>


    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Priority</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
            
        <tbody>
            @foreach (var item in Model.ListOfTasks)
            {
                <tr>
                    <td>@item.TaskName</td>
                    <td>@item.Priority</td>
                    <td>@item.Status</td>
                <td>
                    <a asp-page="EditTask" asp-route-id="@item.TaskId" class="btn btn-primary btn-sm">Edit</a>
                    <button type="button" class="btn btn-danger btn-sm" data-toggle="modal" data-target="#deleteModal-@item.TaskId">Delete</button>
                </td>
                </tr>

            <!-- Delete Modal for each task -->
            <div class="modal fade" id="deleteModal-@item.TaskId" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="deleteModalLabel">Delete Task</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            Are you sure you want to delete this task?
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                            <a asp-page-handler="Delete" asp-route-id="@item.TaskId" class="btn btn-danger">Delete</a>
                        </div>
                    </div>
                </div>
            </div>
        }
        </tbody>
    </table>
        

